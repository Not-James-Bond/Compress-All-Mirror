{
    "manifest_version": 2,
    "name": "Compress All",
    "version": "0.1",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon.png"
      },
      "permissions": [
        "activeTab"
      ],
      "icons": {
        "16": "icons/icon-bitty.png",
        "48": "icons/icon-small.png",
        "128": "icons/icon-large.png"
      },

    "content_scripts": [
        {
          "matches": [
            "<all_urls>"
          ],
          "js": ["js/content.js"]
        }
      ]  ,
      "background": {
        "scripts": [
          "js/background.js"
        ],
        "persistent": true
      } 
}

